<!DOCTYPE html>
<html>
  <head>
    <title>Letsquestion</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Lets Question</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <% if customer_signed_in? %>
        <ul class="navbar-nav ml-auto">
        <li>
        <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link' do %>
          ログアウト
        <% end %>
        </li>
        <li>
        <%= link_to public_customer_path(current_customer.id), class: 'nav-link' do %>
          マイページ
        <% end %>
        </li>
        <li>
        <%= link_to  public_new_questions_path, class: 'nav-link' do %>
          新着質問一覧
        <% end %>
        </li>
        <li>
        <%= link_to  new_public_question_path, class: 'nav-link' do %>
          質問投稿
        <% end %>
        </li>
      </ul>
      <% else %>
      <ul class="navbar-nav ml-auto">
        <li>
          <%= link_to new_customer_registration_path, class: 'nav-link' do %>
            新規登録
          <% end %>
        </li>
        <li>
          <%= link_to new_customer_session_path, class: 'nav-link' do %>
           ログイン
          <% end %>
        </li>
      </ul>
      <% end %>
    </ul>
    <!--<form class="form-inline my-2 my-lg-0">-->
    <!--  <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">-->
    <!--  <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>-->
    <!--</form>-->
  </div>
</nav>
    <%= yield %>
  </body>
</html>
