<div class="conteiner">
  <div class= "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>マイページ</h1>
      <h2>登録情報</h2>
      <span><%= link_to '編集する', edit_public_customer_path(@customer.id), class: "btn btn-sm btn-success edit_public_customer_#{@customer.id}" %></span>

      <table class="table table-hover teble-inverse mt-3">
        <tr>
          <td>氏名</td>
          <td><%= @customer.name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>質問履歴</h2>
      <span><%= link_to 'あなたの質問履歴を見る', public_questions_path, class: "btn btn-sm btn-info public_addresses" %></span>
      <h2>質問をする！</h2>
      <span><%= link_to "Let's Question!!", new_public_question_path, class: "btn btn-sm btn-info public_orders" %></span>
    </div>
  </div>

</div>
